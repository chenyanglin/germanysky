    });
  });

  $('body').on('click', '.specialoffer_del',function(){
    var href = this.href;
    var orign_link = $(this);
    var specialoffer_name = $(this).data("name");
    console.log(specialoffer_name);

    $(".target_specialoffer").text(specialoffer_name);

    $('.delete-check').modal({
        onApprove : function() {
          $.ajax({
            type: "get",
            method: "delete",
            url: href
          });
          $('.ui.dimmer.main').dimmer('show');
          location.reload();
        }
      }).modal('refresh').modal('show');

    return false;
  });

