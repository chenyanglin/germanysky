<div class="ui container">
  <h1 class="ui center aligned icon header" style="font-size:28px;margin:20px 0 22px 0;">
 
    <div class="content">
      會員資料
    </div>
  </h1>
<div class="ui top attached tabular menu">
  <a class="item active" data-tab="first">基本資料</a>
  <a class="item" data-tab="second">帳號資料</a>
  <a class="item" data-tab="third">會員留言</a>
  </div>
  <div class="ui bottom attached tab segment active" data-tab="first">
  <div class="ui segments">
  <div class="ui segment">
    帳號：<%= @account.account_name %>
  </div>
  <div class="ui segment">
    姓名：<%= @account.name %>
  </div>
  <div class="ui segment">
    email：<%= @account.email %>
  </div>
  <div class="ui segment">
    電話：<%= @account.phone1 %>
  </div>
  <div class="ui segment">
    住址：<%= @account.phone1 %>
  </div>
  <div class="ui segment">
    性別：<%= @account.sex %>
  </div>
  </div>

  </div>
  <div class="ui bottom attached tab segment" data-tab="second">
    <div class="ui segments">
      <div class="ui segment">
      等級：<%= @account.account_level.level_name%>
      </div>
      <div class="ui segment">
      升級積分：<%= @account.score %>
      </div>
    <div class="ui segment">
      紅利點數：<%= @account.point %>
    </div>
    </div>
  </div>

  <div class="ui bottom attached tab segment" data-tab="third">
    <% if @messages.size > 0 %>
    <div class="ui segments">
    <% @messages.each do |m| %>
  <div class="ui segment">
  <div class="ui horizontal segments">
    <div class="ui segment" style="width:50%">
      <%= m.title%>
    </div>
    <div class="ui segment" style="width:30%">
      <%= m.created_at.strftime("%Y-%m-%d") %>
    </div>
    <div class="ui segment" style="width:20%">
      <% if m.status == 1 %>
      <font color="green" >已回覆</font>
      <% else %>
      <font color="red" >未回覆</font>
      <% end %>
    </div>
    </div>
      </div>
    <%end%>
    </div>
    <% else %>
    <div class="ui segment">
      沒有留言
      </div>
    <% end %>
  </div>

  </div>
  <script type="text/javascript">
  $('.menu .item')
  .tab()
;
</script>