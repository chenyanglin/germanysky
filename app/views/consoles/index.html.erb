		  <% if @hotsale_products.present? %>
		<% @hotsale_products.each do |p|%>
		<% surplus = 0%>
		<% if p.product_options.size > 1 %>
    		<% price = [] %>
    		<% p.product_options.each do |o| %>
    			<% surplus += o.surplus %>
    			<% price << o.price %>
      		<%end%>
       	<% else %>
    		<% price = p.product_options.first.price %>
    		<% surplus  = p.product_options.first.surplus %>
    	<% end %>
			<li class="span4">
			  <div class="thumbnail">
				<a class="zoomTool" href="/products/<%=p.id%>" title="add to cart"><i class="search icon"></i>前往商品</a>
				<a href="/products/<%=p.id%>"><img style='height: 200px; width: 150px; object-fit: contain' src="<%= asset_path p.productimages.first.phourl %>" alt=""></a>
				<div class="caption cntr">
					<p><%= p.name %></p>
					<p><strong>庫存：<%= surplus %></br> 
					<% if p.product_options.size>1 %>
        				NT ＄ <%= price.min %>~<%=price.max %>
  					<%else%>
        				NT ＄ <%= price %>
  					<%end%></strong></p>
					
					<br class="clr">
				</div>
			  </div>
			</li>
		<%end%>
