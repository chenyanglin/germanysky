<div class="ui container">
  <h1 class="ui center aligned icon header" style="font-size:28px;margin:20px 0 22px 0;">
 
    <div class="content">
      通知付款
    </div>
  </h1>
  <div class="ui horizontal divider">Paycheck</div>
<%= form_for @order , :url => usercheckpay_update_orders_path, method: :post do |f| %>
<input type="hidden" id="order_id" name="id" value="<%= @order.id %>" />
<div class="ui stackable one column centered grid">
  <div class="fourteen wide column">
    <div class="ui large form" style="text-align:left;">
      
      
       應付總額：＄<%= @order.total_price %>元
        <br></br>
      <div class="required field">
        <label>帳戶末五碼：</label>
        <%= f.text_field :lastfivepay, placeholder: "請輸入帳戶末五碼" ,onkeyup: "return ValidateNumber($(this),value)"%>
      </div>
      <div class="required field">
        <label>匯款金額：</label>
        <%= f.text_field :paidprice, placeholder: "請輸入匯款金額" ,onkeyup: "return ValidateNumber($(this),value)"%>
      </div>
    </div>
    <br>
    <div>


    <div class="ui divider"></div>
    <button id="paycheck_submit" class="ui teal basic button">
      <i class="write icon"></i>確認匯款
    </button>

  </div>
</div>
<% end %>
<script type="text/javascript">
function ValidateNumber(e, pnumber)
{
    if (!/^\d+$/.test(pnumber))
    {
        $(e).val(/^\d+/.exec($(e).val()));
    }
    if(pnumber.length>5)
    {
      alert("輸入大於5碼");
    }

    return false;
}



</script>